<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:includeFontPadding="false"
        android:gravity="center" />


    <ImageView
        android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_opponent_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_opponent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center"
        android:includeFontPadding="false" />

    <LinearLayout
        android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_opponent_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_score_opponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_no_of_games_opponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:includeFontPadding="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_vs_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/icon_green_dark"
        android:textAlignment="center"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/vs"/>




    <ImageView
        android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center"
        android:includeFontPadding="false" />

    <LinearLayout
        android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_user_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_score_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_no_of_games_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:includeFontPadding="false" />




    </LinearLayout>






    <TextView
        android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/alert_dialog_with_user_icon_and_two_buttons_dummy_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>