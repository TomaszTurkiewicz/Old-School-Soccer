<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ranking_row_l_l"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/ranking_row_position_text_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="POSITION"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minLines="1"
            android:maxLines="1"/>



    <ImageView
        android:id="@+id/ranking_row_icon_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"/>



        <TextView
            android:id="@+id/ranking_row_user_name_text_view"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="USER NAME"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minLines="1"
            android:maxLines="1"/>

    <TextView
        android:id="@+id/ranking_row_games_text_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="GAMES"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minLines="1"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/ranking_row_score_text_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="SCORE"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minLines="1"
        android:maxLines="1"/>





</LinearLayout>